<h2>Posts List</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New Post</button></a>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{title}}</h4>
        <small>{{description}}</small>
        <p>{{content}}</p>
        <span class="badge badge-secondary">{{category.name}}</span>
        <form action="/admin/posts/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-4 btn-sm float-right">Delete</button>
        </form>
        <a href="/admin/posts/edit/{{_id}}"><button
                class="btn btn-info btn-sm mt-4 float-right mr-1">Edit</button></a>
        <small>Creation date: {{date}}</small>
        <small>by {{user.name}}</small><br>
    </div>
</div>
{{else}}
<h4 class="mt-3">No posts found!</h4>
{{/each}}