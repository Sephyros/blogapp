{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<h3>New Post</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/new" method="POST">
            <label for="title">Title: </label>
            <input type="text" id="title" name="title" placeholder="Post title" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Post slug" class="form-control">
            <label for="description">Description:</label>
            <input type="text" name="description" class="form-control" placeholder="Post description">
            <label for="content">Content:</label>
            <textarea name="content" class="form-control" placeholder="Post content"></textarea>
            <label for="category">Category:</label>
            <select name="category" class="form-control">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">No categories found.</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>