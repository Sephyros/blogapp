<h2>Categories List</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">New Category</button></a>

{{#each categories}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small><br>
        <small>Creation date: {{date}}</small><br>
        <form action="/admin/categories/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-4 btn-sm float-right">Delete</button>
        </form>
        <a href="/admin/categories/edit/{{_id}}"><button
                class="btn btn-info btn-sm mt-4 float-right mr-1">Edit</button></a>
    </div>
</div>
{{else}}
<h4 class="mt-3">No categories found!</h4>
{{/each}}